<p style="color: green"></p>

<h1>Articles</h1>
<table>
<thead>
<tr>
<th>Title</th>
<th>Descriptions</th>
<th colspan="3">Actions</th>
</tr>
</thead>
<tbody>
<% @articles.each do |art|  %>
<tr>
    <td><%= art.title%> </td>
    <td><%= art.description%> </td>
    <td><%= link_to 'Show Record',article_path(art) %></td>
    <td><%= link_to 'Edit Record',edit_article_path(art) %></td>

    <td><%= button_to 'Delete Record',article_path(art), method: :delete, data: {turbo_confirm: "Are you sure to delete??"} %></td>
</tr>
<% end%>

</tbody>

</table>

<p>
<%=link_to "Create New Article", new_article_path %>
</p>


